{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@component-library/components": [
        "libs/component-library/components"
      ],
      "@component-library/styles/*": [
        "libs/component-library/styles/*"
      ]
    }
  }
}